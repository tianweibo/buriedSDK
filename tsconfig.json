{
    "compilerOptions": {
      "target": "ES6",
      "module": "ESNext",
      "strict": true,
      "jsx": "preserve",
      "importHelpers": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "declaration": true, // 生成定义文件
      "baseUrl": ".",
      "types": [
        "node"
      ],
      "paths": {
        "@/*": [
          "src/*"
        ]
      },
      
    },
    "include": ["src/**/*", "src/typings"],
    "exclude": [
      "node_modules"
    ]
  }
  